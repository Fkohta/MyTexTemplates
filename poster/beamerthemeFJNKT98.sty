\ProvidesPackage{beamerthemeFJNKT98}
\mode<presentation>

% ===== Color Configuration ===========================
\selectcolormodel{RGB}
\definecolor{royalblue}{RGB}{1,72,152}
\definecolor{aliceblue}{RGB}{240,248,255}
\definecolor{fjndarkgray}{RGB}{75, 84, 88}
\definecolor{fjnmiddlegray}{RGB}{123, 142, 152}
\definecolor{fjnlightgray}{RGB}{252, 252, 252}

% ===== Font Configuration ============================

\usefonttheme{professionalfonts}

% ===== Outer Configuration ===========================

% ----- Header ----
\setbeamercolor{headline}{fg=white,bg=fjndarkgray}

\setbeamercolor{title in headline}{fg=white}
\setbeamercolor{author in headline}{fg=white}
\setbeamercolor{institute in headline}{fg=white}
\setbeamercolor{conference in headline}{fg=white}

\setbeamertemplate{headline}{
  \leavevmode

  \begin{beamercolorbox}[wd=\paperwidth]{headline}
    \begin{center}
      \vskip5ex
    \usebeamercolor{title in headline}{\color{fg}\textbf{\LARGE{\inserttitle}}\\[2.5ex]}
    \usebeamercolor{author in headline}{\color{fg}\large{\insertauthor}\\[1.2ex]}
    \usebeamercolor{institute in headline}{\color{fg}\large{\insertinstitute}}
    \vskip5ex
    \end{center}
  \end{beamercolorbox}
}

% ---- Footer ----
\setbeamercolor{footline}{fg=white,bg=fjndarkgray}

\setbeamertemplate{footline}{
  \leavevmode
  \begin{beamercolorbox}[wd=\paperwidth,ht=11ex]{footline}
    \vskip3ex
  \end{beamercolorbox}
}

% ===== Inner Configuration ===========================

% ---- Block ----

% --- Normal Block ---
\setbeamercolor*{block body}{fg=black,bg=fjnlightgray}
\setbeamercolor*{block title}{fg=white,bg=fjndarkgray}

\setbeamerfont{block title}{size=\large,series=\bf}
\setbeamertemplate{block begin}{
  \vskip.5ex
  % タイトルの枠設定
  \begin{beamercolorbox}[
    rounded=false,  % 外枠を丸めない
    shadow=false,   % 影は付けない
    leftskip=1em,   % 左側の余白の設定
    colsep*=.75ex   % 枠間の余白の設定
  ]{block title}
    \usebeamerfont*{block title}\insertblocktitle % タイトル挿入
  \end{beamercolorbox}

  % 本文の枠設定
  \usebeamerfont{block body}
  \begin{beamercolorbox}[
      rounded=false,  % 外枠を丸めない
      shadow=false,   % 影は付けない
      leftskip=1em,   % 左側余白
      rightskip=1em,  % 右側余白
      colsep*=.75ex,  % ボックスの水平方向の外側にあるテキストの周りに追加の色分離スペースを設定
      sep=1ex,        % パディング
      vmode           % box開始時に垂直モードになる
  ]{block body}
}
\setbeamertemplate{block end}{
  \end{beamercolorbox}
  \vskip1.5ex
}

% -- Alert Block --
\setbeamertemplate{block alerted begin}{
  \vskip.5ex
  % タイトルの枠設定
  \begin{beamercolorbox}[
    rounded=false,  % 外枠を丸めない
    shadow=false,   % 影は付けない
    leftskip=1em,   % 左側の余白の設定
    colsep*=.75ex   % 枠間の余白の設定
  ]{block title}
    \usebeamerfont*{block alerted title}\insertblocktitle % タイトル挿入
  \end{beamercolorbox}

  % 本文の枠設定
  \usebeamerfont{block alerted body}
  \begin{beamercolorbox}[
      rounded=false,  % 外枠を丸めない
      shadow=false,   % 影は付けない
      leftskip=1em,   % 左側余白
      rightskip=1em,  % 右側余白
      colsep*=.75ex,  % ボックスの水平方向の外側にあるテキストの周りに追加の色分離スペースを設定
      sep=1ex,        % パディング
      vmode           % box開始時に垂直モードになる
  ]{block alerted body}
}
\setbeamertemplate{block alerted end}{
  \end{beamercolorbox}
  \vskip1.5ex
}

% ---- Itemize ----
\useinnertheme{circles}

% ---- Enumerate ----


\setbeamercolor*{normal text}{fg=black,bg=white}
\setbeamercolor{structure}{fg=blue}
\setbeamercolor{alert}{fg=red}



% フッターの余計な記号を消す
\setbeamertemplate{navigation symbols}{}

