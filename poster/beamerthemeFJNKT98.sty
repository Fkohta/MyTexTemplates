\ProvidesPackage{beamerthemeFJNKT98}
\mode<presentation>

% ===== Color Configuration ===========================
\selectcolormodel{RGB}
\definecolor{royalblue}{RGB}{1,72,152}
\definecolor{aliceblue}{RGB}{240,248,255}
\definecolor{fjndarkgray}{RGB}{75, 84, 88}
\definecolor{fjnmiddlegray}{RGB}{123, 142, 152}
\definecolor{fjnlightgray}{RGB}{252, 252, 252}
\definecolor{winered}{RGB}{128, 39, 63}
\definecolor{palered}{RGB}{255, 250, 250}
\definecolor{fjnblue}{RGB}{0, 122, 205}

% ===== Font Configuration ============================

\usefonttheme{professionalfonts}

% ===== Outer Configuration ===========================

% ----- Header ----
\setbeamercolor{headline}{fg=white,bg=fjndarkgray}

\setbeamercolor{title in headline}{fg=white}
\setbeamercolor{author in headline}{fg=white}
\setbeamercolor{institute in headline}{fg=white}
\setbeamercolor{conference in headline}{fg=white}

\setbeamertemplate{headline}{
  \leavevmode

  \begin{beamercolorbox}[wd=\paperwidth]{headline}
    \begin{center}
      \vskip5ex
    \usebeamercolor{title in headline}{\color{fg}\textbf{\LARGE{\inserttitle}}\\[2.5ex]}
    \usebeamercolor{author in headline}{\color{fg}\large{\insertauthor}\\[1.2ex]}
    \usebeamercolor{institute in headline}{\color{fg}\large{\insertinstitute}}
    \vskip5ex
    \end{center}
  \end{beamercolorbox}
}

% ---- Footer ----
\setbeamercolor{footline}{fg=white,bg=fjndarkgray}  % フッターの色を指定

\setbeamertemplate{navigation symbols}{}  % フッターの余計な記号を消す

% フッターの形式定義
\setbeamertemplate{footline}{
  \leavevmode
  \begin{beamercolorbox}[wd=\paperwidth,ht=11ex]{footline}
    \vskip3ex
  \end{beamercolorbox}
}



% ===== Inner Configuration ===========================

% ---- 本文 ----
\setbeamercolor{normal text}{fg=black,bg=white} % 通常の文字
\setbeamercolor{structure}{fg=fjnblue}    % 強調表現その1
\setbeamercolor{alerted text}{fg=winered} % 強調表現その2

\renewcommand{\kanjifamilydefault}{\gtdefault} % 日本語をゴシック体に

% ---- Block ----

% --- Normal Block ---
\setbeamercolor{block body}{fg=black,bg=fjnlightgray} % 文字色：黒，背景：薄灰色
\setbeamercolor{block title}{fg=white,bg=fjndarkgray} % 文字色：白，背景：濃灰色
\setbeamercolor{block separator}{}  % セパレータの色は指定しない

\setbeamerfont{block title}{size=\large,series=\bf} % タイトルのフォントを指定

\setbeamertemplate{block begin}{
  \vskip.5ex
  % タイトルの枠設定
  \begin{beamercolorbox}[
    rounded=false,  % 外枠を丸めない
    shadow=false,   % 影は付けない
    leftskip=1em,   % 左側の余白の設定
    colsep*=.75ex   % 枠間の余白の設定
  ]{block title}
    \usebeamerfont*{block title}\insertblocktitle % タイトル挿入
  \end{beamercolorbox}

  % 本文の枠設定
  \usebeamerfont{block body}
  \begin{beamercolorbox}[
      rounded=false,  % 外枠を丸めない
      shadow=false,   % 影は付けない
      leftskip=1em,   % 左側余白
      rightskip=1em,  % 右側余白
      colsep*=.75ex,  % ボックスの水平方向の外側にあるテキストの周りに追加の色分離スペースを設定
      sep=1ex,        % パディング
      vmode           % box開始時に垂直モードになる
  ]{block body}
}
\setbeamertemplate{block end}{
  \end{beamercolorbox}
  \vskip1.5ex
}

% -- Alert Block --
\setbeamercolor{block alerted body}{fg=black,bg=palered} % 文字色：黒，背景：薄灰色
\setbeamercolor{block alerted title}{fg=white,bg=winered} % 文字色：白，背景：濃灰色
\setbeamercolor{block alerted separator}{}  % セパレータの色は指定しない

\setbeamerfont{block alerted title}{size=\large,series=\bf} % タイトルのフォントを指定

\setbeamertemplate{block alerted begin}{
  \vskip.5ex
  % タイトルの枠設定
  \begin{beamercolorbox}[
    rounded=false,  % 外枠を丸めない
    shadow=false,   % 影は付けない
    leftskip=1em,   % 左側の余白の設定
    colsep*=.75ex   % 枠間の余白の設定
  ]{block alerted title}
    \usebeamerfont*{block title}\insertblocktitle % タイトル挿入
  \end{beamercolorbox}

  % 本文の枠設定
  \usebeamerfont{block alerted body}
  \begin{beamercolorbox}[
      rounded=false,  % 外枠を丸めない
      shadow=false,   % 影は付けない
      leftskip=1em,   % 左側余白
      rightskip=1em,  % 右側余白
      colsep*=.75ex,  % ボックスの水平方向の外側にあるテキストの周りに追加の色分離スペースを設定
      sep=1ex,        % パディング
      vmode           % box開始時に垂直モードになる
  ]{block alerted body}
}
\setbeamertemplate{block alerted end}{
  \end{beamercolorbox}
  \vskip1.5ex
}

% ---- Itemize ----
\setbeamertemplate{itemize items}[circle]     % 丸記号を使う
\setbeamercolor{itemize item}{fg=fjndarkgray}       % 色を指定
\setbeamercolor{itemize subitem}{fg=fjndarkgray}    % 色を指定
\setbeamercolor{itemize subsubitem}{fg=fjndarkgray} % 色を指定

% ---- Enumerate ----
\setbeamertemplate{enumerate items}[default]  % 数字を使う
\setbeamercolor{enumerate item}{fg=fjndarkgray}       % 色を指定
\setbeamercolor{enumerate subitem}{fg=fjndarkgray}    % 色を指定
\setbeamercolor{enumerate subsubitem}{fg=fjndarkgray} % 色を指定

% 箇条書きのサブアイテムの文字サイズを等しくする
\setbeamerfont{itemize/enumerate subbody}{size=\normalsize}
\setbeamerfont{itemize/enumerate subsubbody}{size=\normalsize}

% ---- Caption ----
\setbeamertemplate{caption}[numbered]
\setbeamertemplate{caption label separator}[period]
\setlength{\abovecaptionskip}{2ex}
\setlength{\belowcaptionskip}{1ex}