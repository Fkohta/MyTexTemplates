      leftskip=1em,   % 左側余白
      rightskip=1em,  % 右側余白
      colsep*=.75ex,  % ボックスの水平方向の外側にあるテキストの周りに追加の色分離スペースを設定
      sep=1ex,        % パディング
      vmode           % box開始時に垂直モードになる
